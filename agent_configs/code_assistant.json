{
  "name": "CodeAssistant",
  "description": "A helpful coding assistant with file reading capabilities",
  "model": "grok-code-fast-1",
  "provider": "xai",
  "system_prompt": {"file": "code_assistant"},
  "tools": [
    "filesys.read_file", 
    "filesys.write_file", 
    "filesys.replace_in_file", 
    "filesys.delete_file", 
    "filesys.file_search", 
    "filesys.grep_search",
    "terminal.run_command",
    "web_search"
  ],
  "context_settings": {
    "allowed_base_path": ".",
    "security_level": "developer"
  }
}